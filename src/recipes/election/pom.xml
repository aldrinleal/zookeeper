<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.apache.zookeeper</groupId>
        <artifactId>zookeeper-recipes</artifactId>
        <version>3.6.0-SNAPSHOT</version>
        <relativePath>../</relativePath>
    </parent>
    <groupId>org.apache.zookeeper</groupId>
    <artifactId>zookeeper-recipes-election</artifactId>
    <version>3.6.0-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>ZooKeeper election recipe</name>
    <description>ZooKeeper election recipe</description>
    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <testSourceDirectory>test</testSourceDirectory>
    </build>
    <profiles>
        <profile>
            <id>dist</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <configuration>
                                    <target name="recipes-election-dist" description="Build election recipe distribution">
                                        <property name="dist.dir" location="${project.build.directory}/election"/>
                                        <delete dir="${dist.dir}"/>
                                        <mkdir dir="${dist.dir}"/>
                                        <copy file="${project.build.directory}/${project.artifactId}-${project.version}.jar"
                                            todir="${dist.dir}"/>
                                        <copy file="${project.basedir}/build.xml" todir="${dist.dir}"/>
                                        <mkdir dir="${dist.dir}/test"/>
                                        <copy todir="${dist.dir}/test">
                                            <fileset dir="${project.basedir}/test"/>
                                        </copy>
                                        <mkdir dir="${dist.dir}/src"/>
                                        <copy todir="${dist.dir}/src">
                                            <fileset dir="${project.basedir}/src"/>
                                        </copy>
                                    </target>
                                </configuration>
                                <id>prepare-election-dist</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>